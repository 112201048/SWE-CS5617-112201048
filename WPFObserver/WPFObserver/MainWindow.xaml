<Window x:Class="WPFObserver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFObserver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="300">
            <TextBlock Text ="Enter Listener ID :" FontSize="15"/>
            <TextBox x:Name="ID" FontSize="20" Width="200" HorizontalAlignment="Left" Margin="5"/>
            <TextBlock Text ="Enter Message :" FontSize="15"/>
            <TextBox x:Name="message" FontSize="20" Width="200" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="Send" Background="AliceBlue" FontSize="10" Width="50" Margin="10" Click="OnClick"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Message Received" FontSize="15" HorizontalAlignment="Center"/>
            <TextBox x:Name="msgReceived" FontSize="20" Width="290" HorizontalAlignment="Left" Margin="5" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
